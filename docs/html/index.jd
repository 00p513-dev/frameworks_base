fullpage=true
no_footer_links=true
carousel=true
page.metaDescription=The official site for Android developers. Provides the Android SDK and documentation for app developers and designers.
@jd:body
 
<style>
.grid {
  background:url('../images/home-marquee.jpg') no-repeat center;
}
.home-sections ul li a,
.home-sections ul li a:hover {
 font-weight: bold;
 margin-top: 8px;
 line-height: 18px;
 float: left;
 width: 100%;
 text-align: center;
 border-radius: 2px;
 color: #444;
}

.home-sections ul li:hover a {
 color: #258AAF;
}

.home-sections ul li {
 float: left;
 display: block;
 list-style: none;
 width: 178px;
 height: 35px;
 border: 1px solid gainsboro;
 background-color: #F3F3F3;
 margin-right: 10px;
 border-radius: 2px;
   -webkit-border-radius: 2px;
   -moz-border-radius: 2px;
 box-shadow: 1px 1px 5px #EEE;
   -webkit-box-shadow: 1px 1px 5px #EEE;
   -moz-box-shadow: 1px 1px 5px #EEE;
 background:-webkit-linear-gradient(top, #f3f3f3,#ddd);
}

.home-sections ul li:hover {
 background: #eee;
}
</style>

<div class="wrap">
    <!-- Slideshow -->
    <div class="slideshow-container slideshow-home col-16">
        <a href="" class="slideshow-prev">Prev</a>
        <a href="" class="slideshow-next">Next</a>
        <div class="frame">
            <ul>
                <li class="item carousel-home">
                    <div class="content-left col-10">
                        <img src="{@docRoot}images/home/design.png" style="margin-top:30px">
                    </div>
                    <div class="content-right col-6">
                    <h1>Make your Android apps look great</h1>
                    <p>New templates in the design guide make it easier than ever to design apps
that are beautiful and easy to use.</p>
                    <a href="{@docRoot}design/index.html" class="button">Learn More</a>
                    </div>
                </li>
                <li class="item carousel-home">
                        <div class="content-left col-10">
                        <img src="{@docRoot}images/home/google-io.png">
                        </div>
                        <div class="content-right col-6">
                        <h1>Watch Android Sessions Live!</h1>
                        <p>Be among the first to see the latest demos and developments from Android.
Watch the keynote and over 40 sessions live streamed from Google I/O! It all begins June 27, at
9am.</p>
                        <a href="https://developers.google.com/events/io/sessions#android"
class="button">See the Android sessions</a>
                        </div>
                </li>
                <li class="item carousel-home">
                        <div class="content-left col-10">
                            <img src="{@docRoot}images/home/google-play.png"
                                  style="margin-top:50px">
                        </div>
                        <div class="content-right col-6">
                        <h1>Publish your apps on Google Play</h1>
                        <p>Google Play is an integrated digital content destination where users buy and enjoy all of their favorite content in one place. It's the new destination for Android apps!.</p>
                        <a href="{@docRoot}distribute/index.html" class="button">Learn More</a>
                        </div> 
                </li>
            </ul>
        </div>
    </div>
    <!-- /End slideshow -->
    
    
    
</div>
<div class="wrap" style="padding-bottom:20px">
    <!-- Section links -->
    <div class="home-sections">
        <ul>
            <li><a href="{@docRoot}about/index.html">About Android</a></li>
            <li><a href="{@docRoot}sdk/index.html">Get the SDK</a></li>
            <li><a href="{@docRoot}legal.html">Legal</a></li>
            <li><a href="{@docRoot}support.html">Support</a></li>
            <li class="last"><a href="http://source.android.com">Open Source</a></li>
        </ul>
    </div>
    <!-- /Section links -->
</div>     

