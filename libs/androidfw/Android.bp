// libandroidfw is partially built for the host (used by obbtool, aapt, and others)

cc_library {
    name: "libandroidfw",
    host_supported: true,
    srcs: [
        "Asset.cpp",
        "AssetDir.cpp",
        "AssetManager.cpp",
        "misc.cpp",
        "ObbFile.cpp",
        "ResourceTypes.cpp",
        "StreamingZipInflater.cpp",
        "TypeWrappers.cpp",
        "ZipFileRO.cpp",
        "ZipUtils.cpp",
    ],

    target: {
        android: {
            srcs: [
                "BackupData.cpp",
                "BackupHelpers.cpp",
                "CursorWindow.cpp",
            ],
            shared_libs: [
                "libbinder",
            ],
        },
        host: {
            cflags: ["-DSTATIC_ANDROIDFW_FOR_TOOLS"]
        },
    },
    include_dirs: [
        "external/zlib",
        "system/core/include",
    ],
    static_libs: [
        "libziparchive",
        "libbase",
    ],
    shared_libs: [
        "liblog",
        "libcutils",
        "libutils",
        "libz",
    ],

    cflags: [
        "-Wall",
        "-Werror",
        "-Wunused",
        "-Wunreachable-code",
    ],
}

// Include subdirectory makefiles
// ============================================================

subdirs = ["tests"]
